{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/administrators": ["libs/administrators/src"],
      "@app/administrators/*": ["libs/administrators/src/*"],
      "@app/auth": ["libs/auth/src"],
      "@app/auth/*": ["libs/auth/src/*"],
      "@app/clients": ["libs/clients/src"],
      "@app/clients/*": ["libs/clients/src/*"],
      "@app/constants": ["libs/constants/src"],
      "@app/constants/*": ["libs/constants/src/*"],
      "@app/database": ["libs/database/src"],
      "@app/database/*": ["libs/database/src/*"],
      "@app/users": ["libs/users/src"],
      "@app/users/*": ["libs/users/src/*"]
    }
  }
}
